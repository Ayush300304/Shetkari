<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Chat Message -->
    <TextView
        android:id="@+id/chatMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="4dp"

        android:padding="8dp"
        android:text="Hello, I have a question about crop cultivation."
        android:textColor="#0B0303" />

    <!-- Reply Message -->
    <TextView
        android:id="@+id/replyMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Sure, I'd be happy to help. What's your question?"
        android:textColor="#000000"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"/>

    <!-- You can add more chat messages here as needed -->

    <!-- Input Field -->
    <EditText
        android:id="@+id/chatInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type your message..."
        android:layout_margin="8dp"/>

    <!-- Send Button -->
    <Button
        android:id="@+id/sendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:layout_gravity="end"
        android:layout_marginEnd="8dp"/>
</LinearLayout>
